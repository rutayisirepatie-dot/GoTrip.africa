<!DOCTYPE html>
<html>
<head>
  <title>Admin Dashboard – GoTrip</title>
  <style>
    body { font-family: Arial; padding: 20px; background:#f4f4f4 }
    .card { background:#fff; padding:15px; margin-bottom:15px; border-radius:6px }
    h2 { margin-top:0 }
  </style>
</head>
<body>
  <h1>Admin Dashboard</h1>

  <div class="card">
    <h2>Stats</h2>
    <p>Users: <strong><%= stats.users %></strong></p>
    <p>Trips: <strong><%= stats.trips %></strong></p>
    <p>Contacts: <strong><%= stats.contacts %></strong></p>
  </div>

  <div class="card">
    <h2>Recent Trips</h2>
    <% trips.forEach(t => { %>
      <p><%= t.name %> – <%= t.destination %></p>
    <% }) %>
  </div>

  <div class="card">
    <h2>Recent Messages</h2>
    <% contacts.forEach(c => { %>
      <p><%= c.name %>: <%= c.subject %></p>
    <% }) %>
  </div>
</body>
</html>